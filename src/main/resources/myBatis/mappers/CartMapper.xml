<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CartMapper">
	<update id="setUpdate" parameterType="CartVO">
		update cart set amount = #{amount} where num = #{num}
	</update>
	
	<select id="getList" parameterType="String" resultType="CartListVO">
		select C.num, P.title, O.contents, C.amount, P.price from cart C inner join product P on (C.pid = P.pid) inner join options O on(C.options = O.num) where C.id = #{id}
	</select>
	
	<insert id="setWrite" parameterType="CartVO">
		insert into cart values(product_seq.nextval, #{id}, #{pid}, #{options}, #{amount})
	</insert>
	
	<delete id="setDelete" parameterType="java.util.Map">
		delete cart where num in
		<!-- 
			collection 속성 : Map타입은 변수명으로, List타입은 'list'로, Array(배열)타입은 'array'로
		
			DAO
			HashMap map = new HashMap();
			( , map)
			collection="map"
			List ar = new ArrayList();
			( , ar)
			... myBatis 내부
			Map list = new Map();
			
			collection="list"
			
			Array
			... myBatis 내부
			Map list = new Map();
			collection="array"
			 -->
		<foreach collection="array" item="item" open="(" separator=", " close=")">
			#{item}
		</foreach>
	</delete>
</mapper>